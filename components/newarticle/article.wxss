@import "../../wuBaseWxss/1.wxss";

.notice-wrapper {
    width: 95%;
    margin: 0 auto;
    padding: 16px 32rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    z-index: -1;
    background-color:#E8EFFC;
    border-radius: 10px;
    overflow: hidden;
}

.title {
    width: 120rpx;
    padding: 0 20rpx;
    position: relative;
    font-size: 34rpx;
    font-weight: bold;
    color: #447FFF;
    line-height: 36rpx;
    z-index: -1;
}
.title_bg{width: 60px; height: 60px; z-index: 3;}

.title::after {
    content: '';
    position: absolute;
    top: 5%;
    right: 0;
    width: 4rpx;
    height: 90%;
    background: #c3c3c3;
    z-index: -1;
}

.title-text {
}

.notice-content {
    position: relative;
    width: 120rpx;
    height: 45rpx;
}

.notice-text {
    position: absolute;
    left: 40%;
    top: 50%;
    transform: translate(-50%,-50%);
    font-size: 30rpx;
    color: #fff;
   
    font-weight: 500;
    z-index: -1;
}

.notice-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 120rpx;
    height: 45rpx;
    
    z-index: -2;
}

.content {
    flex: 1;
    align-items: center;
    margin-left: 20rpx;
}

.common-wrapper {
    width: 100%;
}


.common-wrapper .titles {
    font-size: 28rpx;
    color: #333333;
    z-index: -1;
}
.common-wrapper .desc{font-size: 20rpx; color: #999999;}

.swiper {
    flex: 1;
    margin-left: 20rpx;
    font-size: 28rpx;
    color: #b1b1b1;
    height: 40rpx;
    z-index: -1;
}

.swiper-content {
    width: 100%;
    height: 100%;
    z-index: -1;
}

.swiper-item {
    width: 100%;
    height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}