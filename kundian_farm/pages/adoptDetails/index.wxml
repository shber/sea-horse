<!-- style="background-image: url('https://yhm.m666m.cc/addons/kundian_farm/resource/image/animal-src.png');" -->
<import src="../../../wxParse/wxParse.wxml"></import>

<view class="my_content">
  <view class="header">
    <image src="{{details.animal_src}}" class="pic_bg"></image>
    <view class="head_tab">
      <view class="active">图片</view>
      <view>监控1</view>
      <view>监控1</view>
    </view>
  </view>

  <view class="pd_30">
    <view class="shadow_card card1">
      <view class="item_money">¥ {{details.price}}</view>
      <view class="item_title">{{details.animal_name}}</view>
      <view class="item_desc">{{details.gain_desc}}</view>

      <!-- <view class="flex_center text1">
          <view class="flex_center">
            <view>距离成熟</view>
            <view class="progress">
              <view class="progress_bg">
                <view class="progress_active" style="width:{{progressNum}}%"></view>
              </view>
            </view>
          </view>
          <text>{{details.putaway_time}}天/{{details.mature_period}}天</text>
      </view> -->
      <view class="flex_center">
          <text class="red_num">数量</text>
          <view class="selectedNum-wrapper">
              <view bindtap="reduceNum">-</view>
              <input bindinput="chooseNum" type="number" value="{{count}}"></input>
              <view bindtap="addNum">+</view>
          </view>
      </view>
    </view>
    <view class="details">
      <view class="check_tab">
        <view class="my_title {{index == 1 ? 'no_check' : ''}}" bindtap="checkTab" data-index="0"><text>认养详情</text></view>
        <view class="my_title {{index == 0 ? 'no_check' : ''}}" bindtap="checkTab" data-index="1"><text>认养收获</text></view>
      </view>
      <view class="html_content">
        <view class="proImgs" hidden="{{index==1}}">
          <view class="wxParse">
              <template is="wxParse" data="{{wxParseData:article.nodes}}"></template>
          </view>
        </view>
        <view class="proImgs" hidden="{{index==0}}" style="margin-bottom:100rpx;">
            {{details.gain_desc}}
        </view>
      </view>
    </view>
  </view>
  <view class="fixed_btn">
    <button type="primary" hover-class="none" class="primary" bindtap="sureAnimal">立即领养</button>
  </view>

</view>

