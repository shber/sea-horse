page { font-size: 30rpx; background: #f8f8f9; }
.my_content{ position: relative; }
.pd_30{padding: 0 30rpx; height: auto;}

.graph{
    height: 410rpx; padding: 30rpx; position: relative; margin-top: 30rpx;
    box-shadow: 0 2rpx 20rpx 0 rgba(0,0,0,0.08); border-radius: 20rpx; background-color: #fff;
}
.number{font-size: 26rpx; color: #333333;}
.adopt_list{height: auto;}
.adopt_list .icon_time{ width: 20rpx; height: 20rpx; margin-right: 8rpx; }
.flex_wid{width: 390rpx;}
.list_item{display: flex; align-items: center;}
.item_pic{display: block; width: 220rpx; height: 220rpx; border-radius: 16rpx; margin-right: 24rpx;}
.item_title{font-size: 32rpx; color: #333333; font-weight: 500; margin-bottom: 40rpx;}
.flex_center{display: flex; align-items: center; justify-content: space-between;}
.adopt_list .text1{font-size: 24rpx; color: #999999; margin-top: 16rpx;}
.flex_center .red_num{font-size: 40rpx; color: #ED4F4F; font-weight: 500;}
.adopt_list .progress{margin: 12rpx 0rpx; position: relative; height: 26rpx;}
.adopt_list .progress_bg, .adopt_list .progress_active{width: 100%; height: 26rpx; border-radius: 16px; position: absolute; top: 0;}
.adopt_list .progress_bg{ background-color: #F2F2F2;  z-index: 1;}
.adopt_list .progress_active{width: 30%; background-color: #447FFF;  z-index: 3;}
.primary{height: 64rpx; line-height: 64rpx; border-radius: 12rpx !important; font-size: 28rpx;}
.flex_center1{margin-top: 34rpx;}

.item_right{display: flex; flex-direction: column; justify-content: space-between; padding: 8rpx 0;}
.card_item{display: flex;}
.item_number{font-size: 46rpx; color: #ED4F4F;}
.flex_center2{margin: 45rpx 0 65rpx;}



