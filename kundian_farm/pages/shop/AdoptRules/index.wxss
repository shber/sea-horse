page { font-size: 30rpx; background: #f8f8f9; }
.my_content{
 position: relative;
 padding-bottom: 140rpx;
}
.header{
    padding-top: 500rpx;
    background-color: skyblue; width: 100%; height: 760rpx;
    background-size: 100% 100%;
    box-sizing: border-box;
    position: relative;
}
.pic_bg{width: 100%; height: 760rpx; position: absolute; top: 0;}
.head_tab{ display: flex; justify-content: center; color: #fff; position: relative; z-index: 999;}
.head_tab view{white-space: nowrap; padding: 16rpx 30rpx;
    background-color: rgba(0,0,0, 0.4); border: 1rpx solid #fff; border-radius: 20rpx; margin: 0 5rpx;
}
.details{margin-top: 0;}
.active{background-color: #fff !important; color: #447FFF;}
.pd_30{padding: 0 30rpx; height: auto;}
/* .shadow_card{ top: -100rpx; } */
.top_100{position: relative; top: -100rpx;}
.html_content{background-color: #fff;}

.item_desc{font-size: 28rpx; color: #666; margin-top: 10rpx; margin-bottom: 30rpx;}
.shadow_card .item_title{ margin-top: 20rpx; font-size: 34rpx; color: #333333; font-weight: 500;}
.shadow_card .item_money{font-size: 46rpx; color: #ED4F4F; font-weight: 500;}
.shadow_card .progress{ margin-left: 40rpx; position: relative; height: 26rpx; width: 240rpx;}
.shadow_card .progress_bg, .shadow_card .progress_active{width: 100%; height: 26rpx; border-radius: 16px; position: absolute; top: 0;}
.shadow_card .progress_bg{overflow: hidden; background-color: #F2F2F2;  z-index: 1;}
.shadow_card .progress_active{width: 30%; background-color: #447FFF;  z-index: 3;}
.flex_center{display: flex; justify-content: space-between; align-items: center; font-size: 28rpx;}
.text1{margin: 30rpx 0;}
.text1 text{color: #999;}
.check_tab{ margin: 30rpx 0; display: flex; justify-content: space-around;}
.fixed_btn{padding: 20rpx 30rpx; width: 100%; box-sizing: border-box; box-shadow: 0 0 10px 0 rgba(0,0,0,0.10);
    position: fixed; bottom: 0; z-index: 9; background-color: #fff;
}

.back_icon_bg{
    display: flex; align-items: center;
    width: 64rpx; height: 64rpx; position: fixed; top: 50rpx; left: 30rpx; z-index: 79;
    background-color: rgba(0,0,0, 0.4); border-radius: 50%;
}
.back_icon_bg image{margin-left: 20rpx;}

.banner {
    width: 100%;
    height: 750rpx;
    position: relative;
}

.swiper {
    width: 100%;
    height: 750rpx;
    text-align: center;
}

.slide-image {
    width: 100%;
    height: 100%;
}
.adopt-video {
    width: 100%;
    height: 750rpx;
    background: black;
}

.live-play {
    width: 100%;
    margin-top: 85rpx;
}

.video {
    width: 100%;
    height: 450rpx;
    position: absolute;
    left: 0;
    top: 0;
    margin-top: 150rpx;
}
.cu-li{position: absolute; bottom: 146rpx; left: 0; z-index: 999;}
